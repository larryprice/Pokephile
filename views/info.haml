- unless @pokemon.nil?
	#pokemon-info
		%img{:src => @pokemon.image, :height => "250px"}
		%br
		= "Name: #{@pokemon.name}"
		%br
		= "Number: #{@pokemon.number}"
		%br
		= "Types: #{@pokemon.types.first}#{@pokemon.types.count < 2 ? ' ' : ', ' + @pokemon.types.last}"
- else
	#gir-image
		%img{:src => "images/girkachu.png"}
		%br
		= "I don't recognize the Pokemon '#{@bad_input}.'"
		- unless Pokemon.count == 0
			%br
			= "Did you mean '#{@suggestion}?'"
#search
	Search for another Pokemon.
	#search-box
		%form{:action => "search", :method => "POST", :id => "pokemon-search"}
			%input{:type => "text", :id => "pokemon-input", :name => "pokemon", :class => "span3", "data-provide"=>"typeahead", "data-items"=>"10", "autocomplete"=>"off", :autofocus => "", :placeholder => "Find a Pokemon...", "data-source" => settings.pokemon_names}
			%input{:type=>"submit", :class => "btn btn-small", :style => "margin-bottom: 10px; font-weight: bold;", :value => "Search"}